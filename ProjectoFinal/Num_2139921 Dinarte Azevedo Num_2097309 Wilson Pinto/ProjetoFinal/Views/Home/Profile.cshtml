@model ProjetoFinal.Models.UserViewModel
@{
	ViewData["Title"] = "MyProfile";
}

<h3 class="center">My Profile</h3>
<!-- Profile -->
<div class="card round white">
	<div class="container">
		<h1 class="display-4">Welcome @Model.UserName</h1>
		<div class="row">
			<div class="col-md-4">
				<form asp-action="LogoutUser">
					<div class="form-group">
						<input type="submit" value="Logout" class="btn btn-primary" />
					</div>
				</form>
			</div>
		</div>
		<p class="center"><img src="/images/@Model.PicturePath" title="Picture" class="circle" style="height: 106px; width: 106px" alt="Avatar"></p>
		<hr>
		<!--<p><i class="fa fa-envelope margin-right text-theme"></i> User's' email</p>
		<p><i class="fa fa-home fa-fw margin-right text-theme"></i> User's country</p>-->
	</div>

	<div class="text-center">
	
		<h2>User Details</h2>
		<address>
			<br> User: @Model.UserName </br>
			<br> Email: @Model.Email </br>
			<br> First Name: @Model.FirstName </br>
			<br> Last Name: @Model.LastName </br>
			<br> Country: @Model.Country </br>
			<br> Token: @ViewData["Token"] </br>
		</address>
	</div>
</div>

